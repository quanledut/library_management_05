<%= form_with model: @author, local: true do |form| %>

  <%= render "shared/error_messages", object: @author %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :detail %>
    <%= form.text_field :detail, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>
