<%= form_with model: @book, local: true do |form| %>
  <%= render "shared/error_messages", object: @book %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :author %>

    <%= form.collection_select :author_id, Author.all, :id, :name %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :publisher %>
    <%= form.text_field :publisher, class: "form-control" %>
  </div>

  <div>
    <%= form.label :detail %>
    <%= form.text_field :detail, class: "form-control" %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.collection_select(:category_id, Category.all, :id, :name) %>
  </div>

  <div>
    <%= form.label :total_amout %>
    <%= form.text_field :total_amout, class: "form-control" %>
  </div>

  <div>
    <%= form.label :ready_amout %>
    <%= form.text_field :ready_amout, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>
