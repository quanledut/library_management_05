<%= provide(:title, "#{@books.count} books") %>

<h1><%= t ".book" %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Price</th>
      <th>Publisher</th>
      <th>Detail</th>
      <th>Category</th>
      <th>Total amount</th>
      <th>Ready amount</th>
    </tr>
  </thead>

  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= link_to book.name, book_path(book) %></td>
        <td><%= link_to book.author.name, "#" %></td>
        <td><%= book.price %></td>
        <td><%= book.publisher %></td>
        <td><%= book.detail %></td>
        <td><%= link_to book.category.name, "#" %></td>
        <td><%= book.total_amount %></td>
        <td><%= book.ready_amount%></td>

        <td><%= link_to '<i class="fa fa-list fa-lg btn btn-primary" aria-hidden="true" data-toggle="tooltip" title="Show"></i>'.html_safe, {action: :show, :id => book.id} %></td>
        <td><%= link_to '<i class="fa fa-pencil fa-lg btn btn-primary" aria-hidden="true" data-toggle="tooltip" title="Edit"></i>'.html_safe, {action: :edit, :id => book.id} %></td>
        <td><%= link_to '<i class="fa fa-times fa-lg btn btn-primary" aria-hidden="true" data-toggle="tooltip" title="Delete"></i>'.html_safe, book, method: :delete, data: {confirm: "You sure?"} %></td>
        <td><%= link_to '<i class="fa fa-plus fa-lg btn btn-primary" aria-hidden="true" data-toggle="tooltip" title="Edit"></i>'.html_safe, borrow_books_path(:book_id => book) %></td>
      </tr>
    </tbody>
  <% end %>

  <p><%= link_to '<i class="fa fa-plus fa-lg btn btn-primary" aria-hidden="true" data-toggle="tooltip" title="Add">Add book</i>'.html_safe, new_book_path %></p>

  <div class="index_search">
    <%= form_tag books_path, method: :get, id: :search_form, class: "navbar-form" do %>
      <%= text_field_tag :search, params[:search], class: "span2 form-control", placeholder: "Search books" %>
      <button <i class="fa fa-search fa-lg btn btn-primary" aria-hidden="true" data-toggle="tooltip" title="Search"></i></button>
    <% end %>
  </div>

  <% if @book.blank? %>
    <h4>There are no books <%= params[:search] %></h4>
  <% end %>

  <%= link_to t(".back"), books_path %>
</table>
