<%= provide(:title, "#{@categories.count} categories") %>

<h1><%= t ".category" %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Parent_ID</th>
      <th>Name</th>
    </tr>
  </thead>
  <% @categories.each do |category| %>
    <tbody>
      <tr>
        <td><%= category.parent_ID %></td>
        <td><%= category.name %></td>
        <td><%= link_to '<i class="fa fa-list fa-lg btn btn-primary" aria-hidden="true" data-toggle="tooltip" title="Show"></i>'.html_safe, {action: :show, :id => category.id} %></td>
        <td><%= link_to '<i class="fa fa-pencil fa-lg btn btn-primary" aria-hidden="true" data-toggle="tooltip" title="Edit"></i>'.html_safe, {action: :edit, :id => category.id} %></td>
        <td><%= link_to '<i class="fa fa-times fa-lg btn btn-primary" aria-hidden="true" data-toggle="tooltip" title="Delete"></i>'.html_safe, category, method: :delete, data: {confirm: "You sure?"} %></td>
      </tr>
    </tbody>
  <% end %>

  <p><%= link_to '<i class="fa fa-plus fa-lg btn btn-primary" aria-hidden="true" data-toggle="tooltip" title="Add">Add category</i>'.html_safe, new_category_path %></p>

  <div class="index_search">
    <%= form_tag categories_path, method: :get, id: :search_form, class: "navbar-form" do %>
      <%= text_field_tag :search, params[:search], class: "span2 form-control", placeholder: "Search Authors" %>
      <button <i class="fa fa-search fa-lg btn btn-primary" aria-hidden="true" data-toggle="tooltip" title="Search"></i></button>
    <% end %>
  </div>

  <% if @category.blank? %>
    <h4>There are no categories <%= params[:search] %></h4>
  <% end %>

  <%= link_to t(".back"), categories_path %>
</table>
